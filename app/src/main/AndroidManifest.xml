<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.ehospitalapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EHospitalApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity android:name=".activity.ChangesActivity"></activity>
        <activity android:name=".activity.ProfileActivity" />
        <activity android:name=".activity.DetailActivity" />
        <activity android:name=".activity.AdminActivity" />
        <activity android:name=".activity.HrActivity" />
        <activity android:name=".activity.DocActivity" />
        <activity android:name=".activity.JrDocActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>